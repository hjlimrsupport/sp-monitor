#!/bin/bash
# 이 스크립트는 맥북 파인더에서 더블 클릭하여 앱을 실행하기 위한 파일입니다.

# 현재 스크립트가 위치한 디렉토리로 이동
cd "$(dirname "$0")"

echo "================================================"
echo "   Splashtop JP Monitor 실행 중...             "
echo "================================================"
echo ""

# 필요한 라이브러리 자동 설치 및 업데이트
echo "[*] 필요한 라이브러리를 확인하고 설치 중입니다..."
python3 -m pip install -r requirements.txt --quiet

# 모니터링 서버 실행
python3 monitor_server.py

# 실행이 중단되었을 때 터미널이 바로 닫히지 않도록 함
echo ""
echo "프로그램이 종료되었습니다. 이 창을 닫으셔도 됩니다."
read -p "엔터를 누르면 종료됩니다..."
